<Window x:Class="Form.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Form"
        mc:Ignorable="d"
        Title="LoginScreen" Height="300" Width="300" FontSize="14" Background="#04c582">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
             <StackPanel Margin="20">
                    <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White"></Label>
            <TextBox Name="txtusername" Background="#545d6a" Foreground="White" FontSize="18"></TextBox>
            <Label Content="Password" Foreground="White"></Label>
            <TextBox Name="txtpassword" Background="#545d6a" Foreground="White" FontSize="18"></TextBox>
            <Button Name="txtSubmit" Click="txtSubmit_Click" Content ="Submit" Margin="60 10" Background="#545d6a" Foreground="White" FontSize="18"></Button>
        </StackPanel>
    </Border>

</Window>
